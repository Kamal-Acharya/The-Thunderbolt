<%- include("header")-%>

    <div class="container-fluid px-1 px-sm-3 py-5 mx-auto ">
        <div class="row d-flex justify-content-center ">
            <div class="row card0 ">
                <div class="card1 col-lg-8 col-md-7 ">
                    <small>the.weather</small>
                    <div class="text-center ">

                        <%  
                         if (clouds>90 )
                        img="snow.jpg";
                        else if(clouds>80)
                        img="cloudy+rain.jpg";
                        else if(clouds>70)
                        img="night.jpg";
                        else if(clouds>60) 
                        img="cloudy.jpg" ;
                        else if(clouds>50)
                        img="evening-1.jpg";
                        else if(clouds>40)
                        img="evening-2.jpg";
                        else if(clouds>30)
                        img="morning-1.jpg";
                        else
                         img="morning-2.jpg";


%>

                            <%url="images/"+img%>
                                <img class="image mt-5 " src=<%=url %>>
                    </div>
                    <div class="row px-3 mt-3 mb-3 ">
                        <h1 class="large-font mr-3 ">
                            <%=temp%>&#176;</h1>
                        <div class="d-flex flex-column mr-3 ">
                            <h2 class="mt-3 mb-0 ">
                                <%=nameofcity%>
                            </h2>
                            <small><%=timeof%></small>
                        </div>
                        <div class="d-flex flex-column text-center ">
                            <h3 class="fa fa-sun-o mt-4 "></h3>
                            <small><%= description%></small>
                        </div>
                    </div>
                </div>
                <div class="card2 col-lg-4 col-md-5 ">
                    <div class="row px-3 ">
                        <form action="/" method="post" class="d-flex flex-row">
                            <input type="text " name="location" placeholder="Another location " class="mb-5 ">
                            <button type="submit" class=" resize fa fa-search mb-5 mr-0 text-center ">
                                <!-- <div class=""></div> -->
                            </button>
                        </form>

                    </div>
                    <div class="mr-5 ">
                        <p class="light-text suggestion ">
                            <a href="/Delhi" style="text-decoration: none;" class="light-text suggestion"> Delhi</a>
                        </p>
                        <p class="light-text suggestion ">
                            <a href="/Hyderabad" style="text-decoration: none;" class="light-text suggestion">Hyderabad</a></p>
                        <p class="light-text suggestion ">
                            <a href="/Mumbai" style="text-decoration: none;" class="light-text suggestion">Mumbai</a></p>
                        <p class="light-text suggestion ">
                            <a href="/Bengaluru" style="text-decoration: none;" class="light-text suggestion">Bengaluru</a></p>

                        <div class="line my-5 "></div>

                        <p>Weather Details</p>
                        <div class="row px-3 ">
                            <p class="light-text ">Visibility</p>
                            <p class="ml-auto ">
                                <%=visibility/1000%>km
                            </p>
                        </div>
                        <div class="row px-3 ">
                            <p class="light-text ">Humidity</p>
                            <p class="ml-auto ">
                                <%=humidity%>%</p>
                        </div>
                        <div class="row px-3 ">
                            <p class="light-text ">Wind</p>
                            <p class="ml-auto ">
                                <%=windspeed%>km/h</p>
                        </div>
                        <div class="row px-3 ">
                            <p class="light-text ">Rain</p>
                            <p class="ml-auto ">
                                <%=clouds%>
                            </p>
                        </div>

                        <%-include("footer")-%>